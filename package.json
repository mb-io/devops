{
  "name": "devops",
  "version": "1.0.0",
  "description": "A simple typescript project for creating adaptable actions and workflows for GitHub Actions",
  "keywords": [
    "devops",
    "continuous",
    "integration",
    "continuous",
    "delivery",
    "ci",
    "cd"
  ],
  "homepage": "https://github.com/mb-io/devops#readme",
  "bugs": {
    "url": "https://github.com/mb-io/devops/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mb-io/devops.git"
  },
  "license": "MIT",
  "author": "cameron.abell@outlook.com",
  "type": "commonjs",
  "main": "index.mjs",
  "scripts": {
    "build": "tsc && node index.mjs",
    "watch": "node --watch-path=src index.mjs",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "test": "jest",
    "husky:prepare": "node ./node_scripts/delete-husky.mjs && husky"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.5.0",
    "@vercel/ncc": "^0.38.3",
    "reflect-metadata": "^0.2.2",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
